<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="사용자 설정">

        <EditTextPreference
            app:key="username"
            app:title="이름"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="nickname"
            app:title="별명"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue=" "
            app:entries="@array/my_gender"
            app:entryValues="@array/my_gender_values"
            app:key="gender"
            app:title="성별"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="화면 설정">

        <ListPreference
            app:defaultValue="#0174BE"
            app:entries="@array/my_color"
            app:entryValues="@array/my_color_values"
            app:key="color"
            app:title="색상 변경"
            app:useSimpleSummaryProvider="true" />


    </PreferenceCategory>

</PreferenceScreen>