<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FinalApplication" parent="Theme.AppCompat.DayNight">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/main</item>
        <item name="android:statusBarColor">@color/white</item> <!-- 상태바 색상-->
        <item name="android:windowLightStatusBar">true</item>   <!-- 상태바 아이콘(true: 검정 / false: 흰색) -->

        <item name="android:windowContentOverlay">@null</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Theme.FinalApplication" parent="Base.Theme.FinalApplication" />
</resources>
